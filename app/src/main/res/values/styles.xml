<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dotColor">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="horizontal_style">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="XONTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:textSize" >10dip</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="CropButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:textSize" >10dip</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:focusable" >true</item>
        <item name="android:clickable" >true</item>
        <item name="android:background" >@android:color/transparent</item>
    </style>

    <style name="XONInnerBodyBackground">
        <item name="android:background">@drawable/repeat_inner_bg</item>
    </style>

    <style name="XONTitleBackground">
        <item name="android:background">#838383</item>
    </style>

    <style name="XONButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:textSize" >10dip</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:focusable" >true</item>
        <item name="android:clickable" >true</item>
        <item name="android:background" >@android:color/transparent</item>
    </style>

    <style name="XONHomeButton" parent="XONButton">
        <item name="android:background" >#222222</item>
        <item name="android:textColor" >#ffffff</item>
    </style>

    <style name="XONTopButton" parent="XONButton">
        <item name="android:textColor" >#000000</item>
    </style>
</resources>
