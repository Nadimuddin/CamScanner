<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bridgelabz.docscanner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bridgelabz.docscanner.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.bridgelabz.docscanner.activities.DocumentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.bridgelabz.docscanner.activities.ImageCropping"
            android:screenOrientation="portrait"/>
        <activity android:name=".utility.ImageUtil"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ImageViewer"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.XONImageCropActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.XON_IM_UI"
            android:screenOrientation="portrait"/>
        <!--<activity android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"/>-->
    </application>

</manifest>